                                <Trigger Property="ToggleButton.IsChecked" Value="True">
                                    <Setter TargetName="ImageName" Property="Image.Source">
                                        <Setter.Value>
                                            <BitmapImage UriSource="C:\Users\Tobias Hungwe\Desktop\Projecten\KrunsjV1\Krunsj V1\Images\rdoChecked1.png"></BitmapImage>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="ToggleButton.IsChecked" Value="False">
                                    <Setter TargetName="ImageName" Property="Image.Source">
                                        <Setter.Value>
                                            <BitmapImage UriSource="C:\Users\Tobias Hungwe\Desktop\Projecten\KrunsjV1\Krunsj V1\Images\rdoUnchecked1.png"></BitmapImage>
                                        </Setter.Value>
